        CompanyTypesCats = await context.Company_Types_Categories.ToArrayAsync();
        Companies = await context.Companies.ToArrayAsync();

        foreach (var type in Types)
        {
            type.Is_Checked = false;
            context.Update(type);
            await context.SaveChangesAsync();
